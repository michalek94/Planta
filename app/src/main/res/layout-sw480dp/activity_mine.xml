<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="0dp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp"
        android:id="@+id/mineImageView1"
        android:background="@drawable/miiv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="0dp"
        app:layout_heightPercent="32.55%"
        app:layout_widthPercent="50%"
        android:layout_height="0dp"
        android:id="@+id/mineImageView2"
        android:background="@drawable/miiv2"
        android:layout_below="@+id/mineImageView1"
        />
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="37.5%"
        app:layout_widthPercent="50%"
        android:id="@+id/pipelineButton"
        android:background="@drawable/button_pipeline"
        android:layout_below="@+id/mineImageView2"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="71%"
        app:layout_widthPercent="50%"
        android:id="@+id/entranceButton"
        android:background="@drawable/button_entrance"
        android:layout_below="@+id/mineImageView1"
        android:layout_toRightOf="@+id/mineImageView2"
        android:layout_toEndOf="@+id/mineImageView2"/>
    <ImageView
        android:layout_width="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp"
        android:id="@+id/mineImageView3"
        android:background="@drawable/miiv3"
        android:layout_below="@+id/pipelineButton"
        />

    </android.support.percent.PercentRelativeLayout>